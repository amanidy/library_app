<div class="books-container">
  <header class="page-header">
    <h1>Library Books</h1>
    <%= link_to 'Add New Book', new_book_path, class: 'button' %>
  </header>

  <% if @books.any? %>
    <table class="books-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>ISBN</th>
          <th>Status</th>
          <th>Current Borrower</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.isbn %></td>
            <td><span class="status-badge <%= book.status %>"><%= book.status %></span></td>
            <td><%= book.current_borrower || '-' %></td>
            <td class="actions">
              <%= link_to 'View', book_path(book), class: 'button button-small' %>
              <%= link_to 'Edit', edit_book_path(book), class: 'button button-small button-secondary' %>
              <%= link_to 'Delete', book_path(book), 
                  method: :delete,
                  class: 'button button-small button-danger',
                  data: { confirm: 'Are you sure you want to delete this book?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="empty-state">
      <p>No books have been added yet.</p>
      <%= link_to 'Add your first book', new_book_path, class: 'button' %>
    </div>
  <% end %>
</div>